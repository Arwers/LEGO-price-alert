{
    "manifest_version": 2,
    "name": "Lego discount alert",
    "version": "0.0.1",

    "description": "Sends a notification when a Lego set is on sale.",

    "icons": {
      "48": "icons/lego-head-icon.png"
    },

    "permissions": ["activeTab"],

    "browser_action": {
      "default_icon": "icons/lego-head-icon.png",
      "default_title": "Lego discount alert",
      "default_popup": "popup/search_set.html"
    },

    "web_accessible_resources": [
      "legoSets/75159.png",
      "legoSets/75192.png",
      "legoSets/75275.png"
    ]
  }